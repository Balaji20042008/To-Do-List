<%- include ("header") -%>

    <div class = "box" id = "heading">
      <h1> <%= title %> </h1>
    </div>

    <div class = "box">

      <% new_list_items.forEach(function(item){ %>
          <form action = "/delete" method = "post">
            <div class = "item">
                <input type = "checkbox" name = "checkbox" value = "<%= item._id %>" onchange = "this.form.submit()">
                <p> <%= item.Name %> </p>
            </div>
          </form>
        <%  }); %>

      <div class = "item">
        <form action = "/" method = "post">
          <input type = "text" name = "new_item" placeholder = "New Item" autocomplete = "off">
          <button type = "submit" name = "list" value = <%= title %> > + </button>
        </form>
      </div>
    </div>

<%- include ("footer") -%>
